{% extends "body.twig" %}

{% block title %}
    Options
{% endblock %}

{% block body %}
    <button class="retour" id="retour" type="button"><i class="fas fa-long-arrow-alt-left"></i></button>
    <div class="grid">
        <button id="son">
            <i class="fas fa-volume-up color-green"></i>
        </button>

        <h1>Avatar</h1>
            <span id="avatar"></span>
            <span id="avatar_pic"></span>
            <button id="changeavatar" class="changement_information" type="button">changer l'avatar</button>

        <h1>Pseudo</h1>
            <span id="pseudo">{{ user.pseudo }}</span>
            <button id="changeusername" class="changement_information" type="button">changer le pseudo</button>

        <h1>Adresse mail</h1>
            <span id="email">{{ user.adresseMail }}</span>
            <button id="changeemail" class="changement_information" type="button">changer l'adresse mail</button>

        <h1>Mot de passe</h1>
    <button id="changepassword" class="changement_information" type="button">changer le mot de passe</button>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        var _user = {
            id: {{ user.id }},
            avatar: "{{ user.avatar }}"
        }
    </script>
    <script src="/dist/options.js" type="text/javascript"></script>
{% endblock %}