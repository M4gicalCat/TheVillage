{% extends "body.twig" %}

{% block body %}
    <div id="profile">
        <h1 id="pseudo">{{ user.pseudo }}</h1>
    </div>
    <div id="game_settings">
        <div><span id="nbJoueurs">{{ nbPlayers }}</span> / {{ maxPlayers }}</div>
    </div>
    <div id="users">

    </div>
    <div id="chat">
        <div id="form"><button id="sendMessage">Send</button><label><input id="input" type="text" autocomplete="off"></label></div>
        <ul id="messages"></ul>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        var _id = {{ user.id }};
        var _roomId = "{{ roomId }}";
        var _players = {{ players }};
    </script>
    <script src="/dist/lobby_client.js"></script>
{% endblock %}